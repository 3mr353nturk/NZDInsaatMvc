<div class="contact_form">
    <div class="container">
        <div class="row">
            <div class="tt-title text-center">Bizimle İletişime Geçebilirsiniz!</div>
            <div class="col-md-10 col-md-offset-1">
                <div class="contact_us2_form">
                    <form action="/Iletisim/MailGonder" method="post" id="contactusForm">
                        <div class="col-md-4 col-sm-4">
                            <div class="form-group top_bottom">
                                <label for="name">İsim</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4">
                            <div class="form-group top_bottom">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4">
                            <div class="form-group top_bottom">
                                <label for="subject">Konu</label>
                                <input type="text" class="form-control" id="subject" name="subject" required>
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-group Message top_bottom">
                                <label for="exampleTextarea">Mesajınız</label>
                                <textarea class="form-control" id="message" name="message"></textarea>
                            </div>
                            <div class="form_btn">
                                <button type="submit" class="btn sim-button button8" name="contactForm" value="contactForm" id="contactForm"><span>Gönder<i class="icofont icofont-tick-mark"></i></span></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

